
BoxLayout:
    orientation:'vertical'
    canvas:
        Color:
            rgba: .3,.3,.3,.9
        Rectangle:
            size: self.size
            pos: self.pos
    Widget:
        size_hint_y:.1
    Table:
    Widget:
        size_hint_y:.15
<Table>:
    Image:
        source:'image\\table.png'
        size:self.size
        allow_stretch: True
        keep_ratio: False
    StartButton:
        size_hint:None,None
        size:root.size[0]/3,root.size[1]/5
<Player_Box@Image>:
    source:'image\\player_label.png'
    size:self.texture.size
    allow_stretch: True
    keep_ratio: False
<Register>:
    title: 'Test popup'
    size_hint:None,None
    size:dp(400),dp(200)
    BoxLayout:
        id:bl
        padding:dp(20),dp(80),dp(20),dp(80)
        spacing:dp(10)
        Label:
            id: lbl
            text:'Name:'
        TextInput:
        Button:
            text:'Ok'
            on_press: root.dismiss()
<StartButton@AnchorLayout>:
    Button:
        text: 'Start'
        background_color:0,0,0,0
        font_size:dp(40)
        font_name:'Roboto-Regular'
        on_press:
            print('Start')
            app.register()

