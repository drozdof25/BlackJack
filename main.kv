BoxLayout:
    orientation:'vertical'
    canvas:
        Color:
            rgba: .3,.3,.3,.9
        Rectangle:
            size: self.size
            pos: self.pos
    Widget:
        size_hint_y:.1
    Table:
        id:table
    Widget:
        size_hint_y:.15
<Table>:
    Image:
        source:'image\\table.png'
        size:self.size
        allow_stretch: True
        keep_ratio: False
<Player_Box>:
    anchor_x:'center'
    anchor_y:'bottom'
    AnchorLayout:
        size_hint:None,None
        size: root.ids.image.size
        anchor_x:'center'
        anchor_y:'bottom'
        Image:
            id : image
            source:'image\\player_label.png'
            size_hint:None,None
            size: self.texture.size
        BoxLayout:
            orientation:'vertical'
            padding: 10
            Label:
                size_hint_y:.7
                text:root.name
                font_name:'Roboto-Bold'
                font_size:dp(22)
            Label:
                size_hint_y:.3
                text:root.chips
                font_name:'Roboto-Regular'
                font_size:dp(15)
<Register>:
    title: 'Test popup'
    size_hint:None,None
    size:dp(400),dp(200)
    BoxLayout:
        id:bl
        padding:dp(20),dp(80),dp(20),dp(80)
        spacing:dp(10)
        Label:
            id: lbl
            text:'Name:'
        TextInput:
            id: ti
        Button:
            text:'Ok'
            on_press:
                root.dismiss()
                app.remove_start_button()
                app.greate_player(root.ids.ti.text)
                app.change_bet()
<BetSelecter>:
    title: 'Test popup'
    size_hint:None,None
    size:dp(400),dp(200)
    BoxLayout:
        AnchorLayout:
            anchor_x:'center'
            anchor_y:'center'
            Button:
                size_hint:.4,.4
                text:'-'
                on_press : root.bet -= 50
        BoxLayout:
            padding: 20
            orientation: 'vertical'
            Label:
                size_hint:1,.8
                text: str(root.bet)
            Button:
                size_hint:1,.2
                text: 'Ok'
                on_press:
                    app.betting(root.bet)
                    app.add_pot_label()
                    root.dismiss()
        AnchorLayout:
            anchor_x:'center'
            anchor_y:'center'
            Button:
                size_hint:.4,.4
                text:'+'
                on_press : root.bet += 50
<StartButton>:
    Button:
        text: 'Start'
        background_color:0,0,0,0
        font_size:dp(40)
        font_name:'Roboto-Regular'
        on_press:
            print('Start')
            app.register()
<PotLabel>:
    anchor_x:'center'
    anchor_y:'center'
    Label:
        text: 'POT: '+str(root.pot)
        font_size:dp(25)
        font_name:'Roboto-Regular'