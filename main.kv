
<Table>:
    source:'image\\table.png'
    size:self.size
    allow_stretch: True
    keep_ratio: False
<Player_Box>:
    source:'image\\player_label.png'
    size:self.texture.size
    allow_stretch: True
    keep_ratio: False
BoxLayout:
    orientation:'vertical'
    canvas:
        Color:
            rgba: .3,.3,.3,.9
        Rectangle:
            size: self.size
            pos: self.pos

    Widget:
        size_hint_y:.1
    AnchorLayout:
        size_hint_y:.75
        Table:
            id: table
        FloatLayout:
            Player_Box:
                id:player_box
                size_hint:.5,.2
                pos:root.ids.table.width/4,root.ids.table.pos[1]
            BoxLayout:
                padding: dp(45),dp(0),dp(45),dp(0)
                orientation: 'vertical'
                size_hint:None,None
                size:root.ids.player_box.size
                pos:root.ids.player_box.pos
                Label:
                    size_hint:None,None
                    text:root.ids.player_box.player.name
                    font_name: 'Roboto-Bold'
                    font_size:dp(40)
                    color:.8,.8,.8,.8
                Label:
                    text: str(root.ids.player_box.player.chips)
                    font_name: 'Roboto-Regular'
                    font_size:dp(25)
                    color:.8,.8,.8,.8
    Widget:
        size_hint_y:.15
